<div class="panel panel-default">
	<div class="panel-heading">
		<strong class="panel-title">Sign in</strong>
		<div class="clearfix "></div>
	</div>
	<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
	<div class="panel-body ">
		<%= render 'shared/form_errors', :f => f %>
		<div class="form-group">
			<label for="inputEmail3" class="col-sm-2 control-label">Email</label>
			<div class="col-sm-4">
				<%= f.text_field :email ,:class=>"form-control",:placeholder=>"Email"%>
			</div>
		</div>
		<div class="clearfix"></div>
		<div class="clearfix"></div>

		<div class="form-group">
			<br/>
			<label for="inputPassword3" class="col-sm-2 control-label">Password</label>
			<div class="col-sm-4">
				<%= f.password_field :password ,:class=>"form-control" ,:id=>"inputPassword3" ,:placeholder=>"Password"%>
			</div>
		</div>
		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
				<div class="checkbox">
					<% if devise_mapping.rememberable? -%>
					  <%= f.check_box :remember_me %>
					  <%= f.label :remember_me ,:class => "col-sm-3 control-label"%>
					<% end -%>
				</div>
			</div>
		</div>
		<%= render "devise/shared/links" %>
	</div>

	<div class="form-actions panel-footer" >
		<span class="pull-right"> <%= html_submit "Sign in" %> </span>
		<div class="clearfix"></div>
	</div>
	<%end%>
</div>
