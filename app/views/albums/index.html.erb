<div class="panel panel-default">
  <div class="panel-heading">
    <strong class="panel-title">Albums for <%= @artist%></strong>
    <span class="pull-right">
     <%= list_search(@q, artist_albums_path(@artist), :name, :artist_name ) %>
    </span>
    <div class="clearfix "></div>
  </div>
  <div>
    <table class="table table-striped table-bordered  table-hover table-condensed table-responsive ">
      <thead>
        <tr>
          <th><%= sort_link @q, :id, "#"%></th>
          <th><%= sort_link @q, :name, "Name"%></th>
          <th><%= sort_link @q, :release_date, "Release date"%></th>
          <th >Actions</th>
        </tr>
      </thead>
      <tbody>
        <%@albums.each do |album| %>
          <tr>
            <td><%= album.id %></td>
            <td width="500px;"><%= album.name %></td>
            <td width="200px;"><%= date_format album.release_date %></td>
            <td class='actions'>
              <%= list_link('View songs', artist_album_songs_path(@artist,album),'btn-xs' )%>
              <%= show_link('Show album', artist_album_url(@artist,album) ,'btn-xs' ) %>
              <%= edit_link('Edit album', edit_artist_album_path(@artist,album) ,'btn-xs' )%>
              <%= delete_link 'Delete', artist_album_path(@artist,album),'btn-xs' %>
            </td>
          </tr>
        <%end%>
      </tbody>
    </table>
  </div>

  <div class="panel-footer">
    <div class='row'>
      <div class="col-md-6"><%= paginate @albums %></div>
      <div class="col-md-6">
        <span class="pull-right">
          <%= back_link 'Back to artists', artists_path %>
          <%= show_link 'Show artist', artist_path(@artist) %>
          <%= new_link 'New album', new_artist_album_path(@artist) %>
          </span>
      </div>
    </div>
    <div class="clearfix "></div>
  </div>
</div>

