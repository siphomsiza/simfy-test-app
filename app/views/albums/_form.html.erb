<%= form_for([@artist,@album]) do |f| %>
	<div class="panel-body ">
		<%= render 'shared/form_errors', :f => f %>
		<div class="form-group">
			<label for="inputEmail3" class="col-sm-2 control-label">Name</label>
			<div class="col-sm-4">
				<%= f.text_field :name ,:class=>"form-control",:placeholder=>"Name"%>
			</div>
		</div>
		<div class="clearfix"></div>
		<div class="form-group">
			<br/>
			<label for="inputEmail3" class="col-sm-2 control-label">Release date</label>
			<div class="col-sm-4">
				<%= f.date_select :release_date ,:class=>"form-control",:placeholder=>"Name"%>
			</div>
		</div>
		<div class="clearfix"></div>
		<div class="form-group">
			<br/>
			<label for="inputEmail1" class="col-sm-2 control-label">Album cover</label>
			<div class="col-sm-4">
				<%= f.file_field :cover ,:id=>"exampleInputFile"%>
			</div>
		</div>
	</div>
	
	<div class="form-actions panel-footer" >
		<span class="pull-right"> <%= html_submit %>
			<% unless f.object.new_record? %>
			<%= list_link('View songs', artist_album_songs_path(@artist,@album))%>
			<%= show_link 'Show album', artist_album_path(@artist,@album) %>
			<%= delete_link 'Delete album', delete_artist_album_path(@artist,@album) %>
			<%= new_link 'New album', new_artist_album_path(@artist,@album) %>
	
			<% end %>
			<%= back_link('Back to albums', artist_albums_path(@artist)) %> </span>
		<div class="clearfix"></div>
	</div>
<% end %>

