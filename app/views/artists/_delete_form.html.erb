<%= form_for(@artist, :method => :delete) do |f| %>
  <div class="panel-body ">
   <%= render 'shared/form_errors', :f => f %>
    <div class="alert alert-warning">    
         <h4>Artist: <%= @artist%> </h4>
        <b>Are you sure you want to delete this item?</b> <br/>
        <b> By deleting this item, all the items belonging to it will be destroyed as well. This action can not be undone! </b>
    </div>
  </div>
  <div class="form-actions panel-footer" >
     <span class="pull-right">
      <%= html_delete %>
      <%= back_link('Back to artists', artists_path) %> 
      <%= new_link 'New artist', new_artist_path %>
      <%= edit_link 'Edit artist', edit_artist_path(@artist) %>
      <%= show_link 'Show artist', artist_path(@artist) %>
     </span>
      <div class="clearfix"></div>      
  </div>
<% end %>


