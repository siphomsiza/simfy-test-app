<div class="panel panel-default">
  <div class="panel-heading">
    <strong class="panel-title">Artists</strong>
    <span class="pull-right">
     <%= list_search(@q, artists_path, :name ) %>
    </span>
    <div class="clearfix "></div>
  </div>
  <div >
    <table class="table table-striped table-bordered  table-hover table-condensed table-responsive ">
      <thead>
        <tr>
          <th><%= sort_link @q, :id, "#"%></th>
          <th><%= sort_link @q, :name, "Name"%></th>
          <th><%= sort_link @q, :created_at, "Created at"%></th>
          <th >Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @artists.each do |artist| %>
          <tr>
            <td><%= artist.id %></td>
            <td width="500px;"><%= artist.name %></td>
            <td width="200px;"><%= date_format artist.created_at %></td>
            <td class='actions'>
              <%= list_link('View albums', artist_albums_path(artist),'btn-xs' )%>
              <%= show_link('Show artist', artist ,'btn-xs' ) %>
              <%= edit_link('Edit artist', edit_artist_path(artist) ,'btn-xs' )%>
              <%= delete_link 'Delete', delete_artist_path(artist),'btn-xs' %>
            </td>
          </tr>
        <%end%>
      </tbody>
    </table>
  </div>

  <div class="panel-footer">
    <div class='row'>
      <div class="col-md-6"><%= paginate @artists %></div>
      <div class="col-md-6">
        <span class="pull-right">
          <%= new_link 'New artist', new_artist_path %>
          </span>
      </div>
    </div>
    <div class="clearfix "></div>
  </div>
</div>

