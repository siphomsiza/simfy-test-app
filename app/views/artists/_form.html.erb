<%= form_for(@artist) do |f| %>
	<div class="panel-body ">
		<%= render 'shared/form_errors', :f => f %>
		<div class="form-group">
			<label for="inputEmail3" class="col-sm-2 control-label">Name</label>
			<div class="col-sm-4">
				<%= f.text_field :name ,:class=>"form-control",:placeholder=>"Name"%>
			</div>
		</div>
		<div class="clearfix"></div>
		<div class="clearfix"></div>
	</div>
	
	<div class="form-actions panel-footer" >
		<span class="pull-right"> <%= html_submit %>
			<% unless f.object.new_record? %>
			<%= list_link('View albums', artist_albums_path(@artist))%>
			<%= show_link 'Show artist', artist_path(@artist) %>
			<%= delete_link 'Delete artist', delete_artist_path(@artist) %>
			<%= new_link 'New artist', new_artist_path %>
	
			<% end %>
			<%= back_link('Back to artists', artists_path) %> </span>
		<div class="clearfix"></div>
	</div>
<% end %>
