<%= form_for([@artist,@album,@song]) do |f| %>
	<div class="panel-body ">
		<%= render 'shared/form_errors', :f => f %>
		<div class="form-group">
			<label for="inputEmail3" class="col-sm-2 control-label">Title</label>
			<div class="col-sm-4">
				<%= f.text_field :title ,:class=>"form-control",:placeholder=>"Title"%>
			</div>
		</div>
		<div class="clearfix"></div>
		<div class="form-group">
			<br/>
			<label for="inputEmail3" class="col-sm-2 control-label">Duration</label>
			<div class="col-sm-4">
				<%= f.text_field :duration ,:class=>"form-control",:placeholder=>"Duration"%>
			</div>
		</div>
	</div>
	
	<div class="form-actions panel-footer" >
		<span class="pull-right"> <%= html_submit %>
			<% unless f.object.new_record? %>
			<%= list_link('View songs', artist_album_songs_path(@artist,@album))%>
			<%= show_link 'Show album', artist_album_song_path(@artist,@album,@song) %>
			<%= delete_link 'Delete song', delete_artist_album_song_path(@artist,@album,@song) %>
			<%= new_link 'New album', new_artist_album_song_path(@artist,@album) %>
			<% end %>
			<%= back_link('Back to songs', artist_album_songs_path(@artist,@album)) %> </span>
		<div class="clearfix"></div>
	</div>
<% end %>

