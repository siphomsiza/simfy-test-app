







<div class="panel panel-default">
  <div class="panel-heading">
    <strong class="panel-title">Songs for <%= @album%> </strong>
    <span class="pull-right">
     <%#= list_search(@q, artist_album_songs_path(@album.artist,@album), :name, :album_name ) %>
    </span>
    <div class="clearfix "></div>
  </div>
  <div>
    <table class="table table-striped table-bordered  table-hover table-condensed table-responsive ">
      <thead>
        <tr>
          <th><%= sort_link @q, :id, "#"%></th>
          <th><%= sort_link @q, :title, "Name"%></th>
          <th><%= sort_link @q, :album_name, "Album"%></th>
          <th><%= sort_link @q, :artist_album_name, "Artist"%></th>
          <th><%= sort_link @q, :duration, "Song duration"%></th>
          <th >Actions</th>
        </tr>
      </thead>
      <tbody>
        <%@songs.each do |song| %>
          <tr>
            <td><%= song.id %></td>
            <td width="320px;"><%= song.title %></td>
            <td width="200px;"><%= @album.name %></td>
            <td width="200px;"><%= @artist.name %></td>
            <td width="100px;"><%= song.duration %></td>
            <td class='actions'>
              <%#= list_link('View songs', artist_album_songs_path(@artist,album),'btn-xs' )%>
              <%= show_link('Show song', artist_album_song_url(@artist,@album,song) ,'btn-xs' ) %>
              <%= edit_link('Edit song', edit_artist_album_song_path(@artist,@album,song) ,'btn-xs' )%>
              <%= delete_link 'Delete', artist_album_song_path(@artist,@album,song),'btn-xs' %>
            </td>
          </tr>
        <%end%>
      </tbody>
    </table>
  </div>

  <div class="panel-footer">
    <div class='row'>
      <div class="col-md-6"><%= paginate @songs %></div>
      <div class="col-md-6">
        <span class="pull-right">
          <%= back_link 'Back to albums', artist_albums_path(@artist) %>
          <%= show_link 'Show album', artist_album_path(@artist,@album) %>
          <%= new_link 'New song', new_artist_album_song_path(@artist,@album) %>
          </span>
      </div>
    </div>
    <div class="clearfix "></div>
  </div>
</div>


